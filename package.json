{
  "name": "@guardian/example-rendering",
  "version": "0.0.0",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "unpkg": "dist/index.umd.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement",
    "dev": "microbundle watch --jsx React.createElement",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "tsc": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "ci": "tsc && yarn run lint && yarn run jest"
  },
  "dependencies": {
    "@emotion/core": "^10.0.14",
    "@guardian/src-accordion": "^2.7.0",
    "@guardian/src-button": "^2.7.0",
    "@guardian/src-checkbox": "^2.7.0",
    "@guardian/src-foundations": "^2.7.0",
    "@guardian/src-layout": "^2.7.0",
    "@guardian/src-text-input": "^2.7.0",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@emotion/react": "^11.1.1",
    "@guardian/eslint-config": "^0.4.0",
    "@guardian/eslint-config-typescript": "^0.4.1",
    "@guardian/prettier": "^0.4.1",
    "@storybook/addon-essentials": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.7",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "webpack": "^5.5.1"
  },
  "peerDependencies": {
    "@guardian/src-choice-card": "^2.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.3.1",
    "react-is": "^16.8.0",
    "rollup": "^2.3.4"
  },
  "prettier": "@guardian/prettier",
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "/dist"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "pretty-quick --staged && yarn lint && yarn tsc && yarn jest"
    }
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "moduleNameMapper": {
      "^@guardian/src-foundations/(.*)(?<!cjs)$": "@guardian/src-foundations/$1/cjs"
    }
  }
